<h1>Product detail for <em><%= @product.name() %>: <%= sprintf("%.2f", @product.price) %></em></h1>

<form action="/product/<%= @product.id() %>/price" method="post">
  <input name="_method" type="hidden" value="patch">

  <div class = "form-group">
    <label for="price">Reset the Price:</label>
    <input id="price" name="price" class="form-control" type="text">
  </div>
  <button type="submit" class="btn">Update Price</button>

</form>
